{
  "name": "formiga-reactstrap",
  "version": "0.0.1",
  "description": "A Formiga implementation for Reactstrap",
  "author": "Donato Lorenzo <donato@afialapis.com>",
  "contributors": [
    "Donato Lorenzo <donato@afialapis.com>"
  ],
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/afialapis/formiga-reactstrap.git"
  },
  "bugs": {
    "url": "https://github.com/afialapis/formiga-reactstrap/issues"
  },
  "homepage": "https://formiga-reactstrap.afialapis.com/",
  "files": [
    "lib",
    "dist"
  ],
  "main": "./dist/formiga-reactstrap.umd.main.js",
  "cjs": "dist/formiga-reactstrap.cjs.js",
  "browser": "./dist/formiga-reactstrap.umd.js",
  "module": "./dist/formiga-reactstrap.mjs",
  "scripts": {
    "clean-demo": "rm -rf demo/dist",
    "clean-lib": "rm -rf lib && mkdir lib",
    "clean-dist": "rm -rf dist && mkdir dist",
    "lint": "npx xeira lint ./src",
    "test": "npx xeira test ./test/before.mjs ./test/units/form.cjs",
    "test2": "npx xeira test ./test/units/form.mjs",
    "lib": "npm run clean-lib && npx xeira transpile ./src ./lib",
    "dist": "npm run clean-dist && npx xeira bundle",
    "prepare": "npm run clean-demo && npm run lint && npm run test && npm run lib && npm run dist",
    "demo": "npm run clean-demo && npx xeira demo",
    "reset": "npm run clean-demo && npm run clean-lib && npm run clean-dist && rm -fr node_modules package-lock.json && npm i"
  },
  "keywords": [
    "js",
    "react",
    "form"
  ],
  "devDependencies": {
    "bootstrap": "^5.1.3",
    "react-dom": "^16.13.1",
    "xeira": "^0.0.21"
  },
  "dependencies": {
    "formiga": "^0.0.3"
  },
  "peerDependencies": {
    "prop-types": ">=15.7.2",
    "react": ">=16.13.1",
    "reactstrap": ">=9.0.1",
    "reactstrap-date-picker": ">=1.0.2"
  },
  "exports": {
    "import": "./dist/formiga-reactstrap.mjs",
    "default": "./dist/formiga-reactstrap.umd.main.js"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/xeira/configs/eslint.react.cjs"
    ]
  },
  "babel": {
    "extends": "./node_modules/xeira/configs/babel.react.cjs"
  }
}
